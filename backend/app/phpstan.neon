includes:
  - vendor/larastan/larastan/extension.neon
  - vendor/larastan/larastan/rules.neon

parameters:
  # Directories to analyze
  paths:
    - app
    - routes

  # Analysis strictness (0â€“9). Adjust as the codebase matures.
  level: 6

  # Performance and environment
  tmpDir: var/cache/phpstan
  parallel:
    maximumNumberOfProcesses: 4
  memoryLimit: 1G
  phpVersion: 80300

  # Optional: exclude generated or non-source paths if needed
  excludePaths:
    - storage/*
    - bootstrap/*
